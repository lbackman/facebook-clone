<div id="<%= dom_id post %>">
  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= "#{post.author.first_name} #{post.author.last_name}" %>
  </p>

  <p><%= render partial: 'likes/button', locals: { likeable: post } %></p>
  <p><%= post.likes.count %> like(s)</p>

</div>
